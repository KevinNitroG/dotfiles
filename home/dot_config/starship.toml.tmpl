"$schema" = 'https://starship.rs/config-schema.json'

format = """
[](surface0)\
$os\
$username\
[](bg:red fg:surface0)\
$hostname\
[](bg:peach fg:red)\
$directory\
[](fg:peach bg:yellow)\
$git_branch\
$git_status\
[](fg:yellow bg:green)\
$c\
$rust\
$golang\
$nodejs\
$deno\
$php\
$gradle\
$java\
$kotlin\
$python\
[](fg:green bg:blue)\
$docker_context\
$kubernetes\
$helm\
[](fg:blue bg:lavender)\
$cmd_duration\
$sudo\
[ ](fg:lavender)\
$line_break$character"""

command_timeout = 2000
palette = 'catppuccin'

{{- $palette := index .catppuccin.palettes .catppuccinFlavor }}
[palettes.catppuccin]
rosewater = {{ $palette.rosewater | quote }}
flamingo = {{ $palette.flamingo | quote }}
pink = {{ $palette.pink | quote }}
mauve = {{ $palette.mauve | quote }}
red = {{ $palette.red | quote }}
maroon = {{ $palette.maroon | quote }}
peach = {{ $palette.peach | quote }}
yellow = {{ $palette.yellow | quote }}
green = {{ $palette.green | quote }}
teal = {{ $palette.teal | quote }}
sky = {{ $palette.sky | quote }}
sapphire = {{ $palette.sapphire | quote }}
blue = {{ $palette.blue | quote }}
lavender = {{ $palette.lavender | quote }}
text = {{ $palette.text | quote }}
subtext1 = {{ $palette.subtext1 | quote }}
subtext0 = {{ $palette.subtext0 | quote }}
overlay2 = {{ $palette.overlay2 | quote }}
overlay1 = {{ $palette.overlay1 | quote }}
overlay0 = {{ $palette.overlay0 | quote }}
surface2 = {{ $palette.surface2 | quote }}
surface1 = {{ $palette.surface1 | quote }}
surface0 = {{ $palette.surface0 | quote }}
base = {{ $palette.base | quote }}
mantle = {{ $palette.mantle | quote }}
crust = {{ $palette.crust | quote }}

[os]
disabled = false
style = "bg:surface0 fg:text"

[os.symbols]
Alpine = ""
Amazon = ""
Android = ""
Arch = "󰣇"
Artix = "󰣇"
CentOS = ""
Debian = "󰣚"
EndeavourOS = ""
Fedora = "󰣛"
Gentoo = "󰣨"
Linux = "󰌽"
Macos = "󰀵"
Manjaro = ""
Mint = "󰣭"
Pop = ""
Raspbian = "󰐿"
RedHatEnterprise = "󱄛"
Redhat = "󱄛"
SUSE = ""
Ubuntu = "󰕈"
Windows = "󰍲"

[username]
show_always = true
style_user = "bg:surface0 fg:text"
style_root = "bold bg:surface0 fg:maroon"
format = '[ $user ]($style)'

[hostname]
ssh_only = false
style = "bg:red fg:base"
format = "[ ($ssh_symbol )$hostname ]($style)"

[directory]
style = "fg:base bg:peach"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = "󰝚 "
"Pictures" = " "
"projects" = " "
"homelab" = "󱃾 "
"nvim" = " "
".vim" = " "
"chezmoi" = "󰘓 "

[git_branch]
symbol = ""
style = "bg:yellow"
format = '[[ $symbol $branch ](fg:base bg:yellow)]($style)'

[git_status]
style = "bg:yellow"
format = '[[($all_status$ahead_behind )](fg:base bg:yellow)]($style)'

[nodejs]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[c]
symbol = " "
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[rust]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[golang]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[php]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[java]
symbol = " "
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[kotlin]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $version) ](fg:base bg:green)]($style)'

[python]
symbol = ""
style = "bg:text"
format = '[[ $symbol( $pyenv_prefix)( $version)( \($virtualenv\)) ](fg:base bg:green)]($style)'

[docker_context]
symbol = ""
style = "bg:blue"
format = '[[ $symbol( $context) ](fg:base bg:blue)]($style)'

[kubernetes]
style = "bg:blue"
format = '[[ $symbol( $context)( \($namespace\)) ](fg:base bg:blue)]($style)'
disabled = false
symbol ="󱃾"

[conda]
style = "bg:blue"
format = '[[ $symbol( $environment) ](fg:#base bg:blue)]($style)'

[time]
disabled = true
time_format = "%R"
style = "bg:color_bg1"
format = '[[  $time ](fg:base bg:lavender)]($style)'

[sudo]
style = "fg:base bg:lavender"
disabled = false
format = "[ $symbol]($style)"

[cmd_duration]
disabled = false
min_time = 2_000
show_milliseconds = false
show_notifications = false
min_time_to_notify = 300_000
format = '[   $duration ](fg:surface0 bg:lavender)'

[line_break]
disabled = false

[character]
disabled = false
success_symbol = '[](bold fg:text)'
error_symbol = '[](bold fg:red)'
vimcmd_symbol = '[](bold fg:text)'
vimcmd_replace_one_symbol = '[](bold fg:blue)'
vimcmd_replace_symbol = '[](bold fg:lavender)'
vimcmd_visual_symbol = '[](bold fg:yellow)'
