# vim:ft=sshconfig.chezmoitmpl

Host *
  ServerAliveInterval 86400
  ServerAliveCountMax 4
  Port 22
  IdentityFile ~/.ssh/id_ed25519

Host github.com
  User git
  PreferredAuthentications publickey

Host ngen
  HostName ntgnguyen.tailf6edf3.ts.net
  User ntgnguyen
  Port 22

Host idx
  HostName idx-as
  User user

# Host kevblink
#   HostName ssh-kevblink.kevinnitro.id.vn
#   User kevinnitro

# My modem?
Host 192.168.1.1
  HostKeyAlgorithms=+ssh-rsa
  PubkeyAcceptedAlgorithms=+ssh-rsa

Host 192.168.28.*
  SetEnv TERM=screen-256color # Set term for it
  StrictHostKeyChecking no # Disable host key verification
  UserKnownHostsFile /dev/null # Prevent adding to known_hosts file

Host kevblink
  User kevinnitro
  HostName 192.168.28.25

Host kevblink-cloudflare
  User kevinnitro
  HostName 192.0.1.1
