# https://alacritty.org/config-alacritty.html

[general]
import = ["catppuccin.toml"]
live_config_reload = true

[env]
TERM = "xterm-256color"
TERMINAL = "alacritty"

[terminal]
osc52 = "CopyPaste"
{{ if eq .osId "windows" -}}
shell = {
  program = "pwsh",
  args = ["-noLogo", "-WorkingDirectory {{- .chezmoi.homeDir -}}"]
  }
{{- else -}}
shell = { program = "zsh" }
{{- end }}

[window]
padding = { x = 0, y = 0 }
dynamic_padding = true
decorations = "Full"
opacity = {{ .opacity }}
blur = true
startup_mode = "Maximized"

[scrolling]
multiplier = 1

[font]
normal = { family = "Maple Mono NF", style = "Regular" }
bold = { family = "Maple Mono NF", style = "Bold" }
italic = { family = "Maple Mono NF", style = "Italic" }
bold_italic = { family = "Maple Mono NF", style = "Bold Italic" }
size = {{ .terminalFontSize }}

[colors]
transparent_background_colors = false
draw_bold_text_with_bright_colors = false

[cursor]
style = { shape = "Beam", blinking = "Off" }
vi_mode_style = { shape = "Block", blinking = "Off" }

[mouse]
bindings = [{ mouse = "Right", mods = "Control", action = "Paste" }]
hide_when_typing = true

[keyboard]
bindings = [
  { key = "N", mods = "Control|Shift", action = "CreateNewWindow" },
  # { key = "Back", mods = "Control", chars = "\u001b[127;5u" },
]
